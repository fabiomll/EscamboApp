<%
=begin %>
<% if notice %>

<%= javascript_tag  "$.notify('#{notice}', { className: 'success', globalPosition: 'top center'});" %>

<% end %>

<% if alert %>
<script>
  $.notify("<%= alert %>", { className: 'error', globalPosition: 'top center'});
</script>
<% end %>
<%
=end %>

<% if notice %>
  <%= javascript_tag "$.notify( { message: '#{notice}'}, { type: 'success', placement: { from: 'top', align: 'center' }});" %>
<% end %>

<% if alert %>
    <%= javascript_tag "$.notify( { message: '#{alert}'}, { type: 'danger', placement: { from: 'top', align: 'center' }});" %>
<% end %>
